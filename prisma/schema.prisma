// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  password      String
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  cartItems     CartItem[]
  trainedFAQs   FAQ[]     @relation("TrainedFAQs")
}

enum Role {
  ADMIN
  USER
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  code        String?  @unique 
  title       String
  description String
  price       Float
  shippingCost Float   @default(0)
  images      String[]
  category    String
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cartItems   CartItem[]
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  quantity  Int      @default(1)
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model FAQ {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  answer    String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?  @db.ObjectId
  creator   User?    @relation("TrainedFAQs", fields: [createdBy], references: [id], onDelete: SetNull)

  @@index([order])      // برای مرتب‌سازی
  @@index([isActive])   // برای فیلتر کردن
  @@index([createdAt])  // برای مرتب‌سازی زمانی
  @@fulltext([question, answer], map: "faq_search_index") // برای جستجوی متنی
  
  // Compound index برای کوئری‌های رایج
  @@index([isActive, order])
  @@index([createdBy, isActive])
}